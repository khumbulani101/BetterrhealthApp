<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Student_Sign_Up_Activity">

    <Button
        android:id="@+id/std_btn_Sign_Up"
        android:layout_width="225dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_btn"
        android:text="@string/Sign_Up_Btn"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="0.185" />

    <TextView
        android:id="@+id/Sign_Up_Common_Welcome_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/Student_Str"
        android:textColor="@color/heading"
        android:textSize="25dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Application_Name" />

    <TextView
        android:id="@+id/Application_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/app_name"
        android:textColor="@color/heading"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="383dp"
        android:layout_height="658dp"
        android:layout_marginTop="15dp"
        android:background="@color/ScrollBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sign_Up_Common_Welcome_Text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Student_Info_Sign_Up"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="5dp"
                android:text="Student Information"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/studentNo_Sign_Up_TextEdit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:background="@drawable/bg_edtext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:paddingLeft="35dp"
                android:inputType="text"
                android:hint="Student Number"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/program_Major_Sign_Up_TextEdit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:background="@drawable/bg_edtext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:paddingLeft="35dp"
                android:inputType="text"
                android:hint="Program Major"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/LevelOfStudy_Sign_Up_TextEdit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:background="@drawable/bg_edtext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:paddingLeft="35dp"
                android:inputType="text"
                android:hint="Year of Study"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/faculty_Sign_Up_TextEdit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:background="@drawable/bg_edtext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:paddingLeft="35dp"
                android:inputType="text"
                android:hint="Faculty"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/department_Sign_Up_TextEdit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:background="@drawable/bg_edtext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:paddingLeft="35dp"
                android:inputType="text"
                android:hint="Department"
                android:textAlignment="center"/>



            <TextView
                android:id="@+id/Emergency_Info_Sign_Up"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="5dp"
                android:text="Emergency Contacts"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/emergencyRelationship_Sign_Up_TextEdit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:background="@drawable/bg_edtext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:paddingLeft="35dp"
                android:inputType="text"
                android:hint="Relationship"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/emergencyFllNames_Sign_Up_TextEdit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:background="@drawable/bg_edtext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:paddingLeft="35dp"
                android:inputType="text"
                android:hint="Full Names"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/emergencyContact_Sign_Up_TextEdit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:background="@drawable/bg_edtext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:paddingLeft="35dp"
                android:inputType="text"
                android:hint="Contact"
                android:textAlignment="center"/>



            <TextView
                android:id="@+id/Medical_Info_Sign_Up"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="5dp"
                android:text="Medical Information"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/allergies_Sign_Up_TextEdit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:background="@drawable/bg_edtext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:paddingLeft="35dp"
                android:inputType="text"
                android:hint="Allergie"
                android:textAlignment="center"/>

            <EditText
