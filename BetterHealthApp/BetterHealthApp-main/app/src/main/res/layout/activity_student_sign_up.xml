                android:hint="Policy Number"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/CovarageDetails_Sign_Up_TextEdit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:background="@drawable/bg_edtext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:paddingLeft="35dp"
                android:inputType="text"
                android:hint="Covorage Details"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/Campus_Affiliation_Info_Sign_Up"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="5dp"
                android:text="Campus Affiliation"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/RessName_Sign_Up_TextEdit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:background="@drawable/bg_edtext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:paddingLeft="35dp"
                android:inputType="text"
                android:hint="Ress Name"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/Address_Sign_Up_TextEdit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:background="@drawable/bg_edtext"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:paddingLeft="35dp"
                android:inputType="text"
                android:hint="Address"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/RoomNumber_Sign_Up_TextEdit"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:background="@drawable/bg_edtext"
